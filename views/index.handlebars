<div class="container">

    <div class="row">
        <img src="/assets/img/burger.png" class="img-rounded col-md-6 col-md-offset-3" />
    </div>
    <div class="row">
        <h1 class="col-md-6 col-md-offset-3">Eat-Da-Burger!</h1>

        <ul class="col-md-6 col-md-offset-3">
            {{#each burgers}} {{#unless devoured}}
            <p>
                {{this.id}}. {{this.burger_name}}

                <button data-burger_nameid="{{this.id}}" class="devburger_name">Devour It!</button>
            </p>
            {{/unless}} {{/each}}
        </ul>
    </div>
    <div class="row">
        <h3 class="col-md-6 col-md-offset-3">Mmmmm...Delicious!</h3>
        <ul class="col-md-6 col-md-offset-3">
            {{#each burgers}} {{#if devoured}}
            <p>
                {{this.id}}. {{this.burger_name}}
            </p>
            {{/if}} {{/each}}
        </ul>
    </div>
    <div class="row">
        <h4 class="col-md-6 col-md-offset-3">What'd You Like To Eat?!</h4>
        <form id="addburger_name" class="button-size col-md-6 col-md-offset-3">
            <textarea class="col-md-6 col-md-offset-3" type="text" name="burger_name"></textarea>
            <button class="btn btn-default col-md-6 col-md-offset-3" type="submit" style="background-color: black; color: white;">Submit</button>
        </form>
    </div>
</div>
